{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "module": "nodenext",
    "moduleResolution": "nodenext", // Safeguard
    "target": "esnext",
    "lib": ["esnext"],
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./src/types"],

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,

    /* Performance */
    "incremental": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",

    /* Typechecking */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true, // Deployment safety

    /* Style & Safety */
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "esModuleInterop": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}